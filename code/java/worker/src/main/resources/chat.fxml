                            <content>
                                <ListView fx:id="userList" prefHeight="622.0" prefWidth="249.0"/>
                            </content>
                        </ScrollPane>
                    </children>
                </AnchorPane>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="515.0" prefWidth="456.0">
                    <children>
                        <ScrollPane layoutX="-5.0" layoutY="-2.0" prefHeight="578.0" prefWidth="607.0"
                                    AnchorPane.bottomAnchor="46.0" AnchorPane.leftAnchor="0.0"
                                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <content>
                                <ListView fx:id="topicView" prefHeight="576.0" prefWidth="605.0"
